<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">


	<managed-bean>
		<managed-bean-name>resMngrBean</managed-bean-name>
		<managed-bean-class>beans.ReservationManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>roomType</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>registerBean</managed-bean-name>
		<managed-bean-class>beans.Register</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>name</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
		<managed-property>
			<property-name>phone</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
		<managed-property>
			<property-name>email</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
		<managed-property>
			<property-name>password</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
		<managed-property>
			<property-name>passwordConfirm</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>newsletterSignupBean</managed-bean-name>
		<managed-bean-class>beans.NewsletterSignup</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>email</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>aStringBean</managed-bean-name>
		<managed-bean-class>beans.AString</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>str</property-name>
			<property-class>java.lang.String</property-class>
			<null-value></null-value>
		</managed-property>
	</managed-bean>
	
	
	<validator>
		<validator-id>passwordValidator</validator-id>
		<validator-class>validators.PasswordValidator</validator-class>
	</validator>

	<navigation-rule>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/first.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<managed-bean>
  		<managed-bean-name>loginBean</managed-bean-name>
 		<managed-bean-class>beans.Login</managed-bean-class>
  		<managed-bean-scope>session</managed-bean-scope>

  	<managed-property>
    	<property-name>email</property-name>
    	<property-class>java.lang.String</property-class>
    	<null-value></null-value>
  	</managed-property>

  	<managed-property>
    	<property-name>password</property-name>
   	 	<property-class>java.lang.String</property-class>
   	 	<null-value></null-value>
  	</managed-property>
	</managed-bean>
	
	
	<navigation-rule>
		<from-view-id>/first.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>go2</from-outcome>
			<to-view-id>/page2.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>go3</from-outcome>
			<to-view-id>/page3.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>go4</from-outcome>
			<to-view-id>/page4.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/page2.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goBack</from-outcome>
			<to-view-id>/first.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/page3.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goBack</from-outcome>
			<to-view-id>/first.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/page4.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goBack</from-outcome>
			<to-view-id>/first.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>